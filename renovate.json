{
    "extends": ["config:base"],
    "enabledManagers": ["composer"],
    "packageRules": [
        {
            "matchDepTypes": [
                "require",
                "require-dev"
            ],
            "dependencyDashboardApproval": true
        }
    ],
    "vulnerabilityAlerts": {
        "enabled": true
    },
    "rangeStrategy": "bump"
}
